        x += sign(horizontal_speed);
    }
    horizontal_speed = 0;
}
x += horizontal_speed

//vertical collision
if( place_meeting( x, y+vertical_speed, obj_wall))
{
    while(!place_meeting(x, y+sign(vertical_speed), obj_wall))
    {
        y += sign(vertical_speed);
    }
    vertical_speed = 0;
}
